extends ../layouts/application.pug
block content
  .container
    .row.m-y-2
      .col-lg-8.push-lg-4
        ul.nav.nav-tabs
          li.nav-item
            a.nav-link.active(href='', data-target='#profile', data-toggle='tab') Profile
          li.nav-item
            a.nav-link(href='', data-target='#messages', data-toggle='tab') Messages
          li.nav-item
            a.nav-link(href='', data-target='#edit', data-toggle='tab') Edit
        .tab-content.p-b-3
          #profile.tab-pane.active
            h4.m-y-2 User Profile
            .row
              .col-md-12
                h6 About
                p
                  | Web Designer, UI/UX Engineer
                h6 Hobbies
                p
                  | Indie music, skiing and hiking. I love the great outdoors.
              .col-md-12
                h4.m-t-2
                  span.fa.fa-clock-o.ion-clock.pull-xs-right
                  |  Recent Activity
                table.table.table-hover.table-striped
                  tbody
                    tr
                      td
                        strong Abby
                        |  joined ACME Project Team in
                        strong `Collaboration`
                    tr
                      td
                        strong Gary
                        |  deleted My Board1 in
                        strong `Discussions`
                    tr
                      td
                        strong Kensington
                        |  deleted MyBoard3 in
                        strong `Discussions`
                    tr
                      td
                        strong John
                        |  deleted My Board1 in
                        strong `Discussions`
                    tr
                      td
                        strong Skell
                        |  deleted his post Look at Why this is.. in
                        strong `Discussions`
            // /row
          #messages.tab-pane
            h4.m-y-2 Recent Messages & Notifications
            .alert.alert-info.alert-dismissable
              a.panel-close.close(data-dismiss='alert') Ã—
              |  This is an
              strong .alert
              | . Use this to show important messages to the user.
            table.table.table-hover.table-striped
              tbody
                tr
                  td
                    span.pull-xs-right.font-weight-bold 3 hrs ago
                    |  Here is your a link to the latest summary report from the..
                tr
                  td
                    span.pull-xs-right.font-weight-bold Yesterday
                    |  There has been a request on your account since that was..
